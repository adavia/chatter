- if logged_in?
  %ul.list-group
    - current_user.rooms.each do |room|
      %li.list-group-item
        = link_to room.name, room, data: {behavior: "room-link", "room-id": room.id}
        = link_to fa_icon("sign-out"), room_room_users_path(room),
          data: {behavior: "room-leave-link", "room-id": room.id}, class: "pull-right"

